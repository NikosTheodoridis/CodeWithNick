#program 
import os 
import time ##εισάγουμε το άρθρωμαα time

os.mkdir('ITM')
time.sleep(2)#καθυστερεί την εκτέλεση του προγράμματος για 2 δευτερόλεπτα
os.rename('ImportTheModule')
time.sleep(2))#καθυστερεί την εκτέλεση του προγράμματος για 2 δευτερόλεπτα
os.rmdir('ImportTheModule')
